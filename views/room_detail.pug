extends layout

block content

  h1 Room: #{room.building} #{room.roomNumber}
  
  p #[strong Capacity:] #{room.capacity}
  
  div(style='margin-left:20px;margin-top:20px')
  
    h4 Assignments
    
    dl
    each schedule in schedules
      dd 
        a(href=schedule.url) #[strong Time:] #{schedule.session.time}
        p #[strong Topic:] #{schedule.topic.title}<br> #[strong Presenter:] #{schedule.presenter.name}
  
  div(style='margin-left:20px;margin-top:20px')

  hr
  p
      a(href=room.url+'/delete') Delete Room
  p
      a(href=room.url+'/update') Update Room