extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='roomNumber') Room Number:
      input#roomNumber.form-control(type='number' placeholder='220' name='roomNumber' required='true' value=(undefined===room ? '' : room.roomNumber) )
      label(for='building') Building:
      input#building.form-control(type='text' placeholder='Student Building' name='building' required='true' value=(undefined===room ? '' : room.building) )
      label(for='capacity') Capacity:
      input#capacity.form-control(type='number' placeholder='30' name='capacity' required='true' value=(undefined===room ? '' : room.capacity) )
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg